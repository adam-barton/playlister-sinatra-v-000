<h1>Edit <%=@song.name%></h1>
<br><br>
<form method="POST" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="post">
  Song Name: <input type="text" name="Name" value="<%=@song.name%>">
  <br><br>
  Artist Name: <input type="text" name="Artist Name" value="<%=@song.artist.name%>">
<br><br>
<% Genre.all.each do |genre| %>
  <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
<% end %>
   <br><br>
  <input type="submit" value="Save">
</form>
